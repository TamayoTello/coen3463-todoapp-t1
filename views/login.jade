extends layout

block content
   .container
      .row.text-center
        .col-md-12
          br
          br
          h2  To-Do List : Login 
          h5 ( Login yourself to get access )
          br
      .row
        .col-md-4.col-md-offset-4.col-sm-6.col-sm-offset-3.col-xs-10.col-xs-offset-1
          .panel.panel-default
            .panel-heading
              strong    Enter Details To Login 
            .panel-body
              form(role='form', action="/login", method="post")
                h5
                  strong Username
                .form-group.input-group
                  span.input-group-addon
                    i.fa.fa-tag
                  input.form-control(type='text', name="username", placeholder='Your Username' required='')

                h5
                  strong Password
                .form-group.input-group
                  span.input-group-addon
                    i.fa.fa-lock
                  input.form-control(type='password', name="password", placeholder='Your Password' required='')
                center
                  if (errorLogin)
                    h4  #{errorLogin}
                  br
                  button.btn.btn-primary(type='submit')
                    i.fa.fa-sign-out
                    | &nbsp; Login Now
                  hr
                  h5
                    | Not yet registered ? 
                    a(href='/register') Create an account! 